[Unit]
Description=Benjamin AI - Telegram Bot
After=network.target benjamin-data-api.service

[Service]
Type=simple
User=chorizo
Group=chorizo
WorkingDirectory=/home/chorizo/projects/benjamin_ai_system
Environment=PYTHONPATH=/home/chorizo/projects/benjamin_ai_system
EnvironmentFile=-/home/chorizo/projects/benjamin_ai_system/telegram_app/config/.env
ExecStart=/home/chorizo/bbox_env/bin/python -m telegram_app.src.main polling
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ReadWritePaths=/home/chorizo/projects/benjamin_ai_system/telegram_app/logs

[Install]
WantedBy=multi-user.target


