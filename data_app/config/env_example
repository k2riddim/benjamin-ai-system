# Benjamin AI Data App Configuration (example)

# Application Settings
DATA_APP_DEBUG=false
DATA_APP_LOG_LEVEL=INFO

# Database
DATA_APP_DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DBNAME

# Garmin Connect
DATA_APP_GARMIN_TOKEN_DIR=/home/USER/.garmin_tokens
DATA_APP_GARMIN_MAX_RETRY_ATTEMPTS=3

# Strava API
DATA_APP_STRAVA_CLIENT_ID=YOUR_CLIENT_ID
DATA_APP_STRAVA_CLIENT_SECRET=YOUR_CLIENT_SECRET
DATA_APP_STRAVA_ACCESS_TOKEN=YOUR_ACCESS_TOKEN
DATA_APP_STRAVA_REFRESH_TOKEN=YOUR_REFRESH_TOKEN
DATA_APP_STRAVA_TOKEN_EXPIRES_AT=0

# Sync Settings
DATA_APP_SYNC_INTERVAL_HOURS=2
DATA_APP_SYNC_LOOKBACK_DAYS=7
DATA_APP_SYNC_TIMEOUT_SECONDS=300

# Monitoring
DATA_APP_HEALTH_CHECK_INTERVAL_HOURS=24
DATA_APP_DATA_FRESHNESS_ALERT_HOURS=6

# Logging
DATA_APP_LOG_FILE=data_app.log
DATA_APP_LOG_MAX_BYTES=10485760
DATA_APP_LOG_BACKUP_COUNT=5