# Benjamin AI Telegram App Configuration (example)

# Telegram Bot
TELEGRAM_APP_TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM_APP_TELEGRAM_CHAT_ID=YOUR_CHAT_ID

# Integrations
TELEGRAM_APP_DATA_API_BASE_URL=http://127.0.0.1:8010
TELEGRAM_APP_AGENTIC_API_BASE_URL=http://127.0.0.1:8012

# OpenAI (optional, for AI replies via Telegram)
TELEGRAM_APP_OPENAI_API_KEY=
TELEGRAM_APP_OPENAI_MODEL=gpt-4o-mini

# Logging
TELEGRAM_APP_LOG_LEVEL=INFO
TELEGRAM_APP_LOG_FILE=telegram_app.log
TELEGRAM_APP_LOG_MAX_BYTES=10485760
TELEGRAM_APP_LOG_BACKUP_COUNT=5


